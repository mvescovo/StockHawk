<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_red_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Widget-->
    <style name="StockWidget" parent="AppTheme">
        <item name="android:background">@color/local_material_grey_800</item>
    </style>

    <style name="WidgetBidPriceTextStyle" parent="BidPriceTextStyle">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

    <style name="WidgetStockSymbolTextStyle" parent="StockSymbolTextStyle">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

    <style name="WidgetHeading">
        <item name="android:background">@color/material_blue_500</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="WidgetUpdated">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="WidgetRefreshButton">
        <item name="android:background">@color/material_blue_500</item>
        <item name="android:padding">@dimen/widget_margin</item>
    </style>

    <style name="WidgetEmpty" parent="StockWidget">
        <item name="android:padding">@dimen/widget_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

</resources>
